FROM ubuntu:trusty
MAINTAINER Vincent Mizoules, Alexandre Barret

# Update
RUN apt-get update
# Install
RUN apt-get -y install rsyslog postfix mailutils
RUN apt-get -y install postfix-mysql mysql-client

# Add files
ADD run.sh /opt/run.sh
ADD postfix.sql /opt/postfix.sql
ADD config.sh /opt/config.sh

# End install
RUN chmod +x /opt/*.sh
RUN /opt/config.sh

# Run CMD
CMD /opt/run.sh