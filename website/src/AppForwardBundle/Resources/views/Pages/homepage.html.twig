
{% extends 'AppForwardBundle::layout.html.twig' %}

{% block content %}
    <!-- =========================
         HEADER  AREA
    ============================== -->
    <section id="section-1" class="header-section">
        <div class="color-overlay">
            <div class="container">
                <div class="header-logo">
                    <img src="{{ asset('bundles/appforward/images/logo.png')}}" alt="Logo">
                </div> <!-- HEADER LOGO -->
                <div class="header-social-icons"> <!-- HEADER SOCIAL ICONS -->
                    <a href="#"><i class="hovicon effect-7 sub-b fa fa-facebook-square "></i></a>
                    <a href="#"><i class="hovicon effect-7 sub-b fa fa-twitter-square "></i></a>
                    <a href="#"><i class="hovicon effect-7 sub-b fa fa-linkedin-square "></i></a>
                    <a href="#"><i class="hovicon effect-7 sub-b fa fa-github-square"></i></a>
                    <a href="#"><i class="hovicon effect-7 sub-b fa fa-google-plus-square "></i></a>
                </div>
                <div class="header-text">
                    <H1><span class=wodry>Creation d'adresse mail à l'aide d'un nom de site ! |
	 				    Plus besoin de donner votre adresse mail perso ! |
                            Gestion de vos adresses mails ! |
	 				    Plus de spam !
	 				</span> </H1>
                    <H4>Le meilleur site de transfère de mail au monde </H4>
                </div> <!-- HEADER-TEXT -->

                {# user not connected #}
                {% if not is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                <div class="subscribtion-form"> <!-- SUBSCRIBTION FORM  -->

                    <form id="form-register" action="{{ path('fos_user_registration_register') }}" method="post">
                        <div class="subcribtion-inputs">
	 						<span class="input input--madoka">
							<input class="input__field input__field--madoka" type="text" id="input-1" />
							<label class="input__label input__label--madoka" for="input-1">
                                <svg class="graphic graphic--madoka" width="100%" height="100%" viewBox="0 0 404 77" preserveAspectRatio="none">
                                    <path d="m0,0l404,0l0,77l-404,0l0,-77z"/>
                                </svg>
                                <span class="input__label-content input__label-content--madoka">Your E-mail Please...(not implemented yet)</span>
                            </label>
							</span>
                        </div> <!-- SUBSCRIBTION INPUTS -->
                    </form>

                    <form id="form-login" action="{{ path('fos_user_security_login') }}" method="post">
                        <input style="display: none;" type="text" id="input-2" />
                    </form>

                    <div class="row"> <!-- Validations Buttons -->
                        <div class="subscribtion-button">
                            <a class="btn-lg standard-button" onClick="document.forms['form-register'].submit();">
                                Register
                            </a>
                        </div>

                        <div class="subscribtion-button">
                            <a class="btn-lg standard-button" onClick="document.forms['form-login'].submit();">
                                Login
                            </a>
                        </div>
                    </div> <!-- /Validations Buttons -->

                </div> <!-- /SUBSCRIBTION FORM  -->
                {% endif %}

            </div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}
    <script>
        $("#input-1").on("keyup paste", function() {
            $("#input-2").val($(this).val());
        });
    </script>
{% endblock %}