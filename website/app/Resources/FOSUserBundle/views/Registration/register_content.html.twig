{% trans_default_domain 'FOSUserBundle' %}

<form role="form" action="{{ path('fos_user_registration_register') }}" method="POST" class="login-form" >
    <div class="form-group">
        <label for="fos_user_registration_form_email" class="sr-only">Email :</label>
        <input  placeholder="Mail..." class="form-username form-control" type="text" id="fos_user_registration_form_email" name="fos_user_registration_form[email]"  required="required" />
    </div>
    <div class="form-group">
        <label for="fos_user_registration_form_username" class="sr-only">Login :</label>
        <input placeholder="Username..." class="form-username form-control" type="text" id="fos_user_registration_form_username" name="fos_user_registration_form[username]"  required="required" />
    </div>
    <div class="form-group">
        <label for="fos_user_registration_form_plainPassword_first" class="sr-only">Mot de passe :</label>
        <input placeholder="PasswordFisrt..." class=" form-password form-control" type="password" id="fos_user_registration_form_plainPassword_first" required="required" name="fos_user_registration_form[plainPassword][first]" />
    </div>
    <div class="form-group">
        <label for="fos_user_registration_form_plainPassword_second" class="sr-only">Mot de passe :</label>
        <input placeholder="PasswordSecond..." class=" form-password form-control" type="password" id="fos_user_registration_form_plainPassword_second" required="required" name="fos_user_registration_form[plainPassword][second]" />
    </div>

    {{ form_widget(form._token) }}

    <button type="submit" name="_submit" class="btn">Valider</button>
</form>

